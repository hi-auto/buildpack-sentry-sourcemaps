#!/usr/bin/env bash
# bin/compile <build-dir> <cache-dir> <env-dir>

set -e

MAIN_BUILD_DIR=$1
BUILD_DIR=$(cd "$1/" && pwd)
ENV_DIR=$(cd "$3/" && pwd)

for key in SENTRY_AUTH_TOKEN SENTRY_ORG SENTRY_PROJECT; do
    [[ -f "${ENV_DIR}/${key}" ]] && export "$key=$(cat "${ENV_DIR}/${key}")"
    [[ -z "${!key}" ]] && echo "-----> ${key} is missing or empty: unable to continue." && exit 1
done

export PATH="$BUILD_DIR/.heroku/node/bin:$BUILD_DIR/.heroku/yarn/bin":$PATH

cd MAIN_BUILD_DIR
npm install
npm run build

# Setup sentry-cli
npm install -g @sentry/cli

# Create new release
sentry-cli releases new -p $SENTRY_PROJECT $SOURCE_VERSION

# Upload sourcemaps
sentry-cli releases files $SOURCE_VERSION upload-sourcemaps --ext map --no-rewrite "$BUILD_DIR/build/static/js"

# Set commit-release association
sentry-cli releases set-commits "$SOURCE_VERSION" --auto

# Finalize release
sentry-cli releases finalize $SOURCE_VERSION
